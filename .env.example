# REQUIRED: Firebase Configuration
VITE_FIREBASE_API_KEY=your_firebase_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
VITE_FIREBASE_APP_ID=your_firebase_app_id

# REQUIRED: Firebase Admin SDK (for API endpoints)
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project-id.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour Firebase Admin Private Key\n-----END PRIVATE KEY-----\n"

# REQUIRED: AI API Keys
PERPLEXITY_API_KEY=your_perplexity_api_key
OPENAI_API_KEY=your_openai_api_key

# OPTIONAL: Stripe Configuration (App works without these - payments will be disabled)
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# OPTIONAL: Stripe Price IDs (Only needed when Stripe is configured)
VITE_STRIPE_PRICE_STARTER_MONTHLY=price_starter_monthly_id
VITE_STRIPE_PRICE_STARTER_YEARLY=price_starter_yearly_id
VITE_STRIPE_PRICE_PRO_MONTHLY=price_pro_monthly_id
VITE_STRIPE_PRICE_PRO_YEARLY=price_pro_yearly_id
VITE_STRIPE_PRICE_ENTERPRISE_MONTHLY=price_enterprise_monthly_id

# Application URLs
VITE_APP_URL=http://localhost:3000
VITE_API_URL=http://localhost:3000/api
NEXT_PUBLIC_BASE_URL=https://your-domain.com

# Email Configuration (optional)
SENDGRID_API_KEY=your_sendgrid_api_key
EMAIL_FROM=noreply@investorprops.com

# Environment
NODE_ENV=development
VITE_ENVIRONMENT=development
